@model EmployeeManagement.EF.Entities.Department
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Delete</h2>



<div class="col-md-6 col-md-offset-3">

    <p>
        Aşağıda bilgileri verilen departmanı silmek istediğinize emin misiniz?
    </p>

    <strong>Departman Adı :</strong> @Html.DisplayFor(x => x.Name)<br />
    <strong>Açıklaması :</strong> @Model.Description<br />
    <strong>Çalışan Sayısı :</strong>@Model.Employees.Count()<br />
    <br /><br />
    <form method="post">
        @Html.HiddenFor(x => x.Id)
        <button class="btn btn-danger pull-right">Sil</button>
    </form>
    <form action="@Url.Action("Index")">
        <button class="btn btn-primary pull-left">İptal</button>
    </form>
</div>