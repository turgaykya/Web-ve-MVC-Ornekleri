@using Entities
@model User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<h2 class="text-center">Kullanıcı Bilgilerim</h2>
<form method="post" action="/Profil/PasswordUpdate">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12 well">
        <div class="row">
            <div id="error-message" style="display:none" class="text-center alert alert-danger">@TempData["ErrorMessage"]</div>
            <div id="message" style="display:none" class="text-center alert alert-success">@TempData["Message"]</div>
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-12">
                    <label class="form-control">Adım : </label>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.TextBoxFor(x => x.FirstName, new { disabled = true, @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-12">
                    <label class="form-control">Soyadım : </label>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.TextBoxFor(x => x.LastName, new { disabled = true, @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-12">
                    <label class="form-control">Mail Adresim : </label>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.TextBoxFor(x => x.EMail, new { disabled = true, @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-12">
                    <label class="form-control">(*) Kayıtlı Parola : </label>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input type="password" class="form-control" name="OldPassword" id="oldPassword" required />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-12">
                    <label class="form-control">(*) Yeni Parola : </label>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input type="password" class="form-control" name="NewPassword" id="newPassword" required />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-12">
                    <label class="form-control">(*) Yeni Parola (Onay): </label>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input type="password" class="form-control" name="NewPasswordConfirm" id="newPasswordConfirm" required />
                </div>
            </div>
        </div>
        <div class="col-md-5 col-md-offset-7 col-sm-5 col-sm-offset-7 col-xs-12">
            <input type="submit" class="btn btn-success" value="Parola Güncelle" />
            <a href="/Home/" class="btn btn-danger">İptal</a>
        </div>
    </div>

</form>
@section scripts{
    <script>
        if ($("#error-message").html() != "") {
            $("#error-message").slideDown();
            setTimeout(function () {
                $("#error-message").slideUp();
            }, 5000)
        }
        if ($("#message").html() != "") {
            $("#message").slideDown();
            setTimeout(function () {
                $("#message").slideUp();
            }, 5000)
        }
    </script>
    }