
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    @if (ViewBag.canonical!=null)
    {
        <link rel=”canonical” href=”@ViewBag.canonical” />
    }
</head>
<body>
    <div class="container-fluid"> 
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">My Notebook</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a href="/Home/">Ana Sayfa <span class="sr-only">(current)</span></a></li>
                        <li><a href="/Home/">Not Defterlerim</a></li>
                        <li><a href="/Favorite/">Favori Notlarım</a></li>
                        <li><a href="/Share/">Paylaşılan Notlar</a></li>
                    </ul>
                   
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> @Session["FullName"] <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/Profil/">Profilim</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="/Login/Logout">Çıkış</a></li>
                            </ul>
                        </li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
        <section>
            <div style="min-height:500px">
                @RenderBody()
            </div>
        </section>
        <footer>
            <div class="well text-center">
                Bilge Adam Güney 2. Mülakat 2016&copy;
            </div>
        </footer>
    </div>
    <script src="~/scripts/jquery-3.1.1.js"></script>
    <script src="~/scripts/bootstrap.js"></script>
    @RenderSection("scripts",required:false)
</body>
</html>
