@model List<_01_Entities.Subject>

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_TrainerLayout.cshtml";
}




<br />

<section class="content">
    @using (Html.BeginForm("AddNewContent", "Content", FormMethod.Post))
    {
        <div class="form-group">
            <label>Konular</label>
            <select class="form-control" id="Subjects" name="SubjectId">
                @foreach (var item in Model)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>


        <div class="form-group">
            <label for="editor1">İçerik</label>
            <textarea id="editor1" name="document" rows="10" cols="80" style="visibility: hidden; display: none;">
                
            </textarea>
            <div id="cke_editor1" class="cke_1 cke cke_reset cke_chrome cke_editor_editor1 cke_ltr cke_browser_webkit" dir="ltr" lang="tr" role="application" aria-labelledby="cke_editor1_arialbl">
            </div>
        </div>

        
            <div class="form-group">
                <div class="box-footer">
                    <a href="#" type="submit" class="btn btn-default">Vazgeç</a>
                    <button type="submit" class="btn btn-info pull-right">Oluştur</button>
                </div>
            </div>
        

    }
</section>
